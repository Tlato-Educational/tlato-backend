        "errorhandler": "1.5.1",
        "express": "4.21.1",
        "express-flash": "0.0.2",
        "express-session": "1.18.1",
        "express-validator": "7.2.0",
        "fbgraph": "1.4.4",
        "lodash": "^4.17.21",
        "lusca": "1.7.0",
        "mongoose": "8.7.3",
        "nodemailer": "6.9.15",
        "passport": "0.7.0",
        "passport-facebook": "3.0.0",
        "passport-local": "1.0.0",
        "pug": "3.0.3",
