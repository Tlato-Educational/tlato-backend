{
  "$schema": "https://biomejs.dev/schemas/1.6.3/schema.json",
  "formatter": {
    "enabled": true,
    "ignore": [
      "node_modules",
      ".next",
      "dist",
      ".wrangler",
      "pnpm-lock.yaml",
      "package.json",
      "package-lock.json",
      "yarn.lock",
      "bun.lockb",
      "extension/dist/**/*"
    ],
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always"
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space",
      "trailingCommas": "none"
    },
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": true
    }
  },
  "linter": {
    "enabled": true,
    "ignore": ["node_modules/**/*", "dist/**/*", "build/**/*", ".next/**/*", "public/**/*.js", "extension/dist/**/*"],
    "rules": {
      "complexity": {
        "noBannedTypes": "warn"
      },
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  },
  "organizeImports": {
    "enabled": true,
    "ignore": ["node_modules", ".next", "dist", ".nuxt", ".wrangler", ".react-email", "extension/dist"]
  }
}
